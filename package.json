{
  "name": "ts-auth",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production npx pm2 start pm2.yaml",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node --files' ./src/server.ts",
    "build": "tsc",
    "serve": "ts-node src/server.ts",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "npm run test -- --watch",
    "docker:db:start": "docker-compose up",
    "docker:db:reset": "docker-compose down && docker volume rm ts-auth_ts_auth && docker-compose build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/connect-redis": "0.0.10",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^4.16.1",
    "@types/express-promise-router": "^2.0.1",
    "@types/express-session": "^1.15.12",
    "@types/faker": "^4.1.5",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.4.14",
    "@types/redis-mock": "^0.17.0",
    "@types/sparkpost": "^2.1.4",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "@types/yup": "^0.26.13",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "config": "^3.1.0",
    "connect-redis": "^3.4.1",
    "date-fns": "^1.30.1",
    "eslint": "^5.16.0",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "express-session": "^1.16.1",
    "faker": "^4.1.0",
    "http-status-codes": "^1.3.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.10.0",
    "redis-mock": "^0.44.0",
    "sparkpost": "^2.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "winston": "^3.2.1",
    "yup": "^0.27.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ]
  },
  "dependencies": {
    "pm2": "^3.5.0"
  }
}
